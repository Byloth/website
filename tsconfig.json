{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext",
      "DOM",
      "ScriptHost",
      "WebWorker"
    ],
    "strict": true,
    "jsx": "preserve",
    "noEmit": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "preserveValueImports": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@theme/*": [".vitepress/theme/*"]
    },
    "types": [
      "vite/client",
      "vitepress/client"
    ]
  },
  "include": [
    ".vitepress/**/*",
    ".vitepress/**/*.json",

    "src/**/*",
    "src/**/*.json"
  ]
}
